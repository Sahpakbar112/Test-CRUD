RewriteEngine On
RewriteBase /  # sesuaikan jika di subfolder, misal /project/

# Hilangkan index.php dari URL
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]

# Optional: agar folder system dan application tidak bisa diakses
<IfModule mod_rewrite.c>
    RewriteRule ^(system|application) - [F,L]
</IfModule>
